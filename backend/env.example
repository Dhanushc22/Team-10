# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,your-shared-hostname

# Database
# Use a shared Postgres for team hackathon to avoid local SQLite conflicts
# Example: postgres://USER:PASSWORD@HOST:PORT/DBNAME
# DATABASE_URL=postgres://postgres:postgres@10.0.0.5:5432/shiv_accounts
# For local dev fallback (SQLite):
DATABASE_URL=

# Email Settings (for production)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Media and Static Files
MEDIA_ROOT=media/
STATIC_ROOT=staticfiles/

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Feature Flags
ENABLE_GPT5=1
